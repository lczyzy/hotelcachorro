@model List<Cliente>

@{
    DateTime dataHora = ViewBag.DataHora;
}

<h2>Gerenciamento dos Clientes</h2>
<a asp-action="Cadastrar" class="btn btn-info">Cadastrar Cliente</a>
<table class="table table-hover table-striped"
       style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Gênero</th>
            <th>CPF</th>
            <th>RG</th>
            <th>Telefone</th>
            <th>Data nascimento</th>
            <th>Endereco</th>
            <th>CriadoEm</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Cliente item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Sobrenome</td>
                <td>@item.Genero</td>
                <td>@item.Cpf</td>
                <td>@item.Rg</td>
                <td>@item.Telefone</td>
                <td>@item.DataNascimento</td>
                <td>@item.Endereco</td>     
                <td>@item.CriadoEm</td>
            
            </tr>
        }
    </tbody>
</table>
<b>Dados atualizados em: </b> @dataHora