@model Domain.Quarto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Quarto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdQuarto" />
            <div class="form-group">
                <label asp-for="NomeQuarto" class="control-label"></label>
                <input asp-for="NomeQuarto" class="form-control" />
                <span asp-validation-for="NomeQuarto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoQuarto" class="control-label"></label>
                <input asp-for="PrecoQuarto" class="form-control" />
                <span asp-validation-for="PrecoQuarto" class="text-danger"></span>
            </div>

            <div id="check">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="1" id="check">
                    <label class="form-check-label">Informações adicionais</label>
                </div>
            </div>

            <div id="divDef" class="form-group" style='visibility: hidden;'>
                <input asp-for="InfoAdicional" class="form-control" placeholder="Informações adicionais" />
                <span asp-validation-for="InfoAdicional" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


<script>

    document.getElementById("check").onclick = function () {
        value = document.getElementById("check").value;
        if (value == 2) {
            document.getElementById("check").value = 1;
            document.getElementById('divDef').style.visibility = 'hidden'
        }
        else {
            document.getElementById("check").value = 2;
            document.getElementById('divDef').style.visibility = 'visible'
        }
    }


</script>


