        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" id="Cpf">
                <label asp-for="Pet.cliente.Cpf"></label>
                <input type="text" class="form-control"
                       asp-for="Pet.cliente.Cpf" />
                <span asp-validation-for="Pet.cliente.Cpf"
