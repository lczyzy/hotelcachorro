                </select>
            </div>

            <div class="form-group" id="Servicos">
                <label>Servicos</label>
                <select asp-items="@ViewBag.Servicos"
                        class="form-control"
                        name="drpServicos">
                    <option> -- SELECIONE -- </option>
                </select>

            </div>

            <input type="submit"
                   class="btn btn-info"
                   value="Adicionar Serviço"
